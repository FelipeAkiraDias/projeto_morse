//Esse programa recebe sinais via lora e imprime na serial

#include <SPI.h>
#include <LoRa.h>

// LoRa pin definitions for Heltec WiFi LoRa 32 V2
#define LORA_SCK     5
#define LORA_MISO    19
#define LORA_MOSI    27
#define LORA_SS      18
#define LORA_RST     14
#define LORA_DIO0    26

#define LORA_BAND    915E6  // Set to match the transmitter (433E6, 868E6, or 915E6)

SPIClass spiLoRa(VSPI);  // VSPI used on ESP32

void setup() {
  Serial.begin(115200);
  delay(100);

  // Initialize SPI bus with custom pins
  spiLoRa.begin(LORA_SCK, LORA_MISO, LORA_MOSI, LORA_SS);

  // Set LoRa pins
  LoRa.setPins(LORA_SS, LORA_RST, LORA_DIO0);

  // Initialize LoRa
  LoRa.setSPI(spiLoRa);  // set custom SPI bus
    if (!LoRa.begin(LORA_BAND)) {

    Serial.println("LoRa init failed. Check your connections.");
    while (true) delay(1000);
  }

  Serial.println("LoRa receiver ready.");
  Serial.print("Listening on ");
  Serial.print(LORA_BAND);
  Serial.println(" Hz");
}

void loop() {    
  // Serial.println("Waiting for packet:");

  int packetSize = LoRa.parsePacket();
  if (packetSize) {
    Serial.println("Received packet:");

    String incoming = "";
    while (LoRa.available()) {
      incoming += (char)LoRa.read();
    }

    Serial.println(incoming);

    // Optional: print RSSI and SNR
    Serial.print("RSSI: ");
    Serial.print(LoRa.packetRssi());
    Serial.print(" dB, SNR: ");
    Serial.print(LoRa.packetSnr());
    Serial.println(" dB\n");
  }
}
